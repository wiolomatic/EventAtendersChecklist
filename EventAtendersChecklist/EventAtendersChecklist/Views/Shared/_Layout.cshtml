<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Event Attenders check list</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")


    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Event Attenders", "Index", "Events", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (!User.IsInRole("CP")) {
                @Html.Partial("_Menu")}
                else
                {
                @Html.Partial("_ChangePass")
                }
            </div>
        </div>
    </div>

    <div class="container body-content">
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("CP"))
            {
                <div style="text-align:center;">
                    <h3>Your password is temporary. Do you want to change it?</h3>
                    <tr>@Html.ActionLink("No", "UMeditCP", "Account", new { @class = "btn btn-success" })</tr>
                    <tr>@Html.ActionLink("Change Password", "ChangePassword", "Manage", new { @class = "btn btn-danger" })</tr>
                </div>
            }
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Event Attendees Checklist Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
