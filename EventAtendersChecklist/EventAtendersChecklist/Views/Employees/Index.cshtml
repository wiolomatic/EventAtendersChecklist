@model EventAtendersChecklist.Models.Employee

@using (Html.BeginForm("Index", "Employees", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString", "", new { @class = "form-control", placeholder = "SearchString"})
        <input id="Search" type="submit" />
    </p>
}

<div id="partialContent">
    @Html.Action("GetEmployees", "Employees")
</div>

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script type="text/javascript">
        $(function () {
            var notification = $.connection.signalRHub;

            // Create a function that the hub can call to broadcast messages.
            notification.client.notifyChanges = function () {
                getEmployees();
            };

            // Start the connection.
            $.connection.hub.start().done(function () {
                getEmployees();
            }).fail(function (e) {
            });
        });


        function getEmployees() {
            $.ajax({
                url: '/Employees/GetEmployees',
                cache: false,
                contentType: 'application/html ; charset:utf-8',
                type: 'GET',
                dataType: 'html'
            }).success(function (result) {
                $("#partialContent").empty().append(result);
            }).error(function () {

            });
        }
    </script>
}

