@model IEnumerable<EventAtendersChecklist.Models.Event>
@using GridMvc.Html;

<h2>History</h2>


@Html.Grid(Model).Columns(collumn =>
{
    collumn.Add(x => x.Id, true);
    collumn.Add(x => x.Name).Titled("Event").Css("bolded");
    collumn.Add(x => x.StartDate).Titled("Start Date").Css("bolded")
                .SortInitialDirection(GridMvc.Sorting.GridSortDirection.Descending); ;
    collumn.Add(x => x.EndDate).Titled("End Date").Css("bolded");
    collumn.Add().Sanitized(false).Encoded(false)
                .RenderValueAs(model => Html.ActionLink("Show", "ShowHistory", new { id = model.Id }, new { @class = "btn btn-info", style = "width:120px; height:35px" }).ToHtmlString());
    collumn.Add().Sanitized(false).Encoded(false)
                .RenderValueAs(model => Html.ActionLink("Delete", "Delete", new { id = model.Id }, new { @class = "btn btn-danger", style = "width:120px; height:35px" }).ToHtmlString());
}).WithPaging(10)

<style>
    .bolded {
        font-size: 17px;
    }
</style>
