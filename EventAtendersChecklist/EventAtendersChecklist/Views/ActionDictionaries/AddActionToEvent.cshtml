@model EventAtendersChecklist.ModelsView.AddActionToEventViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EventID)
        <div class="form-group">
            @Html.LabelFor(model => model.ActionDictionaryProp.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ActionDictionaryProp.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActionDictionaryProp.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" style = "width:120px; height:35px"/>
                <br><br>
                @Html.ActionLink("Back to List", "Show", "Events", new { id = Model.EventID }, new { @class = "btn btn-primary", style = "width:120px; height:35px" })
            </div>
        </div>
    </div>
}
    